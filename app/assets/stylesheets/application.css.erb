body {
    min-height: 1500px;
    background-image: url(<%= asset_path 'gpg.jpg' %>);
    background-color: white;
    font-family: Sans-Serif;
    margin: 0;
    padding: 0;
}

.wrapper  {
  margin: 0px;
  padding: 0px;

}

.name {
	margin-left: 10%;
  width: 60%;
}

.underline {
	margin-left: 10%;
  width: 60%;
}

h1 {
  padding-top: 75px;
  margin-bottom: 0px;
  color: white;
  font-size: 4em;
}

h2 {
  margin-top: 0px;
  padding-top: 10px;
  color: #18f;
  font-size: 2em;
  border-top: dotted 2px;
  border-top-color: white;
}

h3 {
	font-size: 1.2em;
}

ul {
	list-style-type: none;
}

a:link {
    color: white;
}
a:visited {
	color: white;
}
a:hover {
    color: lightgrey;
}
a:active {
    color: light;
}

footer {
   position:fixed;
   opacity: .4; 
   bottom: 0;
   width: 100%;
   height: 70px;   /* Height of the footer */
   background: #ddd;
   border-top: dotted 2px white;
   padding: 2px;
}

.quote {
  font-color: white;
  font-size: 1.3em;
  padding: 0;
  margin: 0;
}

.right {
  margin-left: 75%;
  padding: 0;
}

p {
  margin: 10px;
}